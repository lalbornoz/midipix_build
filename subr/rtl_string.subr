rtl_isnumber() {
	local _s="${1}" _rc=0;
	while [ -n "${_s}" ]; do
	case "${_s}" in
	[0-9]*)	_s="${_s#[0-9]}"; ;;
	*)	_rc=1; break; ;;
	esac; done;
	return "${_rc}";
};

