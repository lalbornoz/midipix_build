	Z*)     _s_new="${_s_new:+${_s_new}}z"; _s="${_s#Z}"; ;;
	[^ABCDEFGHIJKLMNOPQRSTUVWXYZ]*)
		_s_new="${_s_new:+${_s_new}}${_s%%[ABCDEFGHIJKLMNOPQRSTUVWXYZ]*}";
		while [ "${_s#[^ABCDEFGHIJKLMNOPQRSTUVWXYZ]}" != "${_s}" ]; do
			_s="${_s#[^ABCDEFGHIJKLMNOPQRSTUVWXYZ]}";
