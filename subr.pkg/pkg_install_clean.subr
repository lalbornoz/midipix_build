#
# set +o errexit -o noglob -o nounset is assumed.
#

pkg_install_clean() {
	local _pic_group_name="${1}" _pic_pkg_name="${2}" _pic_restart_at="${3}";

	if [ "${PKG_DESTDIR:+1}" = 1 ]; then
		rtl_fileop rm "${PKG_DESTDIR}" || return 1;
		rtl_fileop mkdir "${PKG_DESTDIR}" || return 1;
	fi;
	return 0;
};

